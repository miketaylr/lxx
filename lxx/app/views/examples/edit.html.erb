<% form_for(@example) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :example %><br />
    <%= f.text_field :example %>
  </p>
  <p>
    <%= f.label :gloss %><br />
    <%= f.text_field :gloss %>
  </p>
  <p>
    <%= f.label :translation %><br />
